generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                 String   @id @default(cuid())
  email              String   @unique
  name               String
  password           String
  avatar             String?
  phone              String?
  role               UserRole @default(USER)
  isEmailVerified    Boolean  @default(false) @map("is_email_verified")
  jobFunction        String?  @map("job_function")
  preferredLocations String[] @map("preferred_locations") // User's preferred work locations
  workAuthorization  String?  @map("work_authorization")
  remoteWork          Boolean   @default(false) @map("remote_work")
  resumeUrl           String?   @map("resume_url")
  isOnboardingComplete Boolean  @default(false) @map("is_onboarding_complete")
  onboardingCompletedAt DateTime? @map("onboarding_completed_at")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")

  // Relations
  applications         Application[]
  savedJobs            SavedJob[]
  userOpportunityTypes UserOpportunityType[]

  @@index([email])
  @@index([isEmailVerified])
  @@index([role])
  @@index([jobFunction])
  @@index([preferredLocations])
  @@index([isOnboardingComplete])
  @@index([createdAt])
  @@map("users")
}

model OpportunityType {
  id   String @id @default(cuid())
  name String @unique // e.g., "Job", "Internship", "Scholarship", "Fellowship", "Volunteer", "Contract"

  // Relations
  userOpportunityTypes  UserOpportunityType[]
  opportunityCategories OpportunityCategory[]

  @@index([name])
  @@map("opportunity_types")
}

model UserOpportunityType {
  id                String @id @default(cuid())
  userId            String @map("user_id")
  opportunityTypeId String @map("opportunity_type_id")

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  opportunityType OpportunityType @relation(fields: [opportunityTypeId], references: [id], onDelete: Cascade)

  @@unique([userId, opportunityTypeId])
  @@index([userId])
  @@index([opportunityTypeId])
  @@map("user_opportunity_types")
}

model Opportunity {
  id               String   @id @default(cuid())
  title            String
  organization     String // Changed from "company" to be more inclusive
  description      String
  requirements     String[]
  benefits         String[]
  compensation     String? // Changed from "salary" to include scholarships, stipends, etc.
  compensationType String?  @map("compensation_type") // e.g., "salary", "stipend", "scholarship_amount", "hourly"
  locations        String[] // Multiple locations: ["New York, NY", "Remote", "London, UK"]
  isRemote         Boolean  @default(false) @map("is_remote")
  deadline         DateTime
  author           String?
  views            Int      @default(0)
  isActive         Boolean  @default(true) @map("is_active")
  applicationUrl   String?  @map("application_url")
  contactEmail     String?  @map("contact_email")
  experienceLevel  String?  @map("experience_level")
  duration         String? // e.g., "3 months", "1 year", "ongoing"
  eligibility      String[] // Specific eligibility criteria
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  // Relations
  applications          Application[]
  savedJobs             SavedJob[]
  opportunityCategories OpportunityCategory[]

  @@index([title])
  @@index([organization])
  @@index([locations])
  @@index([isRemote])
  @@index([deadline])
  @@index([isActive])
  @@index([experienceLevel])
  @@index([compensationType])
  @@index([createdAt])
  @@index([isActive, deadline])
  @@index([isActive, locations])
  @@map("opportunities")
}

model OpportunityCategory {
  id                String @id @default(cuid())
  opportunityId     String @map("opportunity_id")
  opportunityTypeId String @map("opportunity_type_id")

  opportunity     Opportunity     @relation(fields: [opportunityId], references: [id], onDelete: Cascade)
  opportunityType OpportunityType @relation(fields: [opportunityTypeId], references: [id], onDelete: Cascade)

  @@unique([opportunityId, opportunityTypeId])
  @@index([opportunityId])
  @@index([opportunityTypeId])
  @@map("opportunity_categories")
}

model Application {
  id            String            @id @default(cuid())
  userId        String            @map("user_id")
  opportunityId String            @map("opportunity_id")
  status        ApplicationStatus @default(PENDING)
  coverLetter   String?           @map("cover_letter")
  resumeUrl     String?           @map("resume_url")
  appliedAt     DateTime          @default(now()) @map("applied_at")
  updatedAt     DateTime          @updatedAt @map("updated_at")

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  opportunity Opportunity @relation(fields: [opportunityId], references: [id], onDelete: Cascade)

  @@unique([userId, opportunityId])
  @@index([userId])
  @@index([opportunityId])
  @@index([status])
  @@index([appliedAt])
  @@index([userId, status])
  @@map("applications")
}

model SavedJob {
  id            String   @id @default(cuid())
  userId        String   @map("user_id")
  opportunityId String   @map("opportunity_id")
  savedAt       DateTime @default(now()) @map("saved_at")

  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  opportunity Opportunity @relation(fields: [opportunityId], references: [id], onDelete: Cascade)

  @@unique([userId, opportunityId])
  @@index([userId])
  @@index([opportunityId])
  @@index([savedAt])
  @@map("saved_jobs")
}

model Blog {
  id          String   @id @default(cuid())
  title       String
  description String
  content     String
  author      String
  category    String
  readTime    String   @map("read_time")
  imageUrl    String?  @map("image_url")
  isPublished Boolean  @default(true) @map("is_published")
  publishedAt DateTime @default(now()) @map("published_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([title])
  @@index([author])
  @@index([category])
  @@index([isPublished])
  @@index([publishedAt])
  @@index([createdAt])
  @@index([isPublished, publishedAt])
  @@map("blogs")
}

enum ApplicationStatus {
  PENDING
  REVIEWING
  INTERVIEW
  ACCEPTED
  REJECTED
  WITHDRAWN
}

model CrawlSource {
  id                 String             @id @default(cuid())
  name               String
  url                String
  frequency          CrawlFrequency     @default(WEEKLY)
  status             CrawlSourceStatus  @default(INACTIVE)
  scraperType        ScraperType        @default(OPPORTUNITY_FOR_AFRICANS) @map("scraper_type")
  cssSelectors       String?            @map("css_selectors")
  lastCrawledAt      DateTime?          @map("last_crawled_at")
  nextCrawlAt        DateTime?          @map("next_crawl_at")
  opportunitiesFound Int                @default(0) @map("opportunities_found")
  isActive           Boolean            @default(true) @map("is_active")
  isDetailsCrawled   Boolean            @default(true) @map("is_details_crawled")
  errorMessage       String?            @map("error_message")
  createdAt          DateTime           @default(now()) @map("created_at")
  updatedAt          DateTime           @updatedAt @map("updated_at")

  // Relations
  aiDrafts AIDraft[]

  @@index([status])
  @@index([frequency])
  @@index([isActive])
  @@index([nextCrawlAt])
  @@index([createdAt])
  @@map("crawl_sources")
}

model AIDraft {
  id               String         @id @default(cuid())
  title            String
  organization     String
  description      String
  requirements     String[]
  benefits         String[]
  compensation     String?
  compensationType String?        @map("compensation_type")
  locations        String[]
  isRemote         Boolean        @default(false) @map("is_remote")
  deadline         DateTime
  applicationUrl   String?        @map("application_url")
  contactEmail     String?        @map("contact_email")
  experienceLevel  String?        @map("experience_level")
  duration         String?
  eligibility      String[]
  status           AIDraftStatus  @default(PENDING)
  reviewedBy       String?        @map("reviewed_by") // User ID of reviewer
  reviewedAt       DateTime?      @map("reviewed_at")
  rejectionReason  String?        @map("rejection_reason")
  isDetailsCrawled Boolean        @default(false) @map("is_details_crawled")
  rawScrapedData   Json?          @map("raw_scraped_data")
  opportunityId    String?        @unique @map("opportunity_id") // If approved and published
  crawlSourceId    String         @map("crawl_source_id")
  sourceUrl        String         @map("source_url") // Original URL where it was found
  rawData          String?        @map("raw_data") // JSON string of original scraped data
  createdAt        DateTime       @default(now()) @map("created_at")
  updatedAt        DateTime       @updatedAt @map("updated_at")

  // Relations
  crawlSource CrawlSource @relation(fields: [crawlSourceId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([crawlSourceId])
  @@index([reviewedBy])
  @@index([createdAt])
  @@index([status, createdAt])
  @@map("ai_drafts")
}

enum CrawlFrequency {
  DAILY
  WEEKLY
  MONTHLY
}

enum CrawlSourceStatus {
  ACTIVE
  INACTIVE
  ERROR
}

enum ScraperType {
  INDEED
  OPPORTUNITY_FOR_AFRICANS
  LINKEDIN
}

enum UserRole {
  USER
  MODERATOR
  ADMIN
}

enum AIDraftStatus {
  PENDING
  APPROVED
  REJECTED
  PUBLISHED
}
